<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230F86"
    android:padding="16dp"
    tools:context=".DetallePelicula">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_pelicula_imagen"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_card_pelicula"
            android:src="@drawable/bones" />

        <TextView
            android:id="@+id/iv_nombre_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="BONES"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/iv_pelicula_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:textAlignment="center"
            android:text="Dr. Temperance Brennan is a brilliant anthropologist who helps the FBI solve crimes by examining human remains..." />
    </LinearLayout>
</ScrollView>
